{
  "compilerOptions": {
    "target": "ES2020",                  // Especifica la versión de ECMAScript que deseas usar
    "module": "commonjs",                // Establece el módulo a CommonJS (necesario para Node.js)
    "strict": true,                      // Habilita todas las verificaciones de tipo estricto
    "esModuleInterop": true,             // Permite la importación de módulos ES6
    "skipLibCheck": true,                // Omite la verificación de tipo en archivos de definición
    "forceConsistentCasingInFileNames": true, // Asegura que los nombres de archivo sean consistentes
    "outDir": "./dist",                  // Carpeta de salida para los archivos compilados
    "rootDir": "./src",                  // Carpeta raíz del código fuente
    "baseUrl": ".",                      // Base URL para las importaciones
    "paths": {
      "*": ["node_modules/*", "src/types/*"] // Añade una ruta de búsqueda para los tipos personalizados
    }
  },
  "include": ["src/**/*.ts", "src/index.ts"],           // Archivos a incluir en la compilación
  "exclude": ["node_modules", "dist"]   // Archivos o carpetas a excluir
}
